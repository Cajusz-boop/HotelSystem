# Skopiuj do .env i uzupełnij dane do bazy (MySQL/MariaDB)
# DATABASE_URL="mysql://USER:HASLO@localhost:3306/hotel_pms"
DATABASE_URL="mysql://root:@localhost:3306/hotel_pms"

# =============================================================================
# Auth & Security
# =============================================================================

# WYMAGANE — klucz do podpisywania JWT. Wygeneruj: openssl rand -base64 32
SESSION_SECRET=

# Timeout bezczynności (domyślnie 30 min)
SESSION_IDLE_TIMEOUT_MINUTES=30

# =============================================================================
# API Security
# =============================================================================

# Opcjonalne — lista IP dozwolonych do API (oddzielone przecinkami)
API_IP_WHITELIST=

# =============================================================================
# Build
# =============================================================================

# Opcjonalne — włącz bundle analyzer (true/false)
ANALYZE=false

# =============================================================================
# Konfiguracja aplikacji
# =============================================================================

# Nazwa hotelu (wyświetlana w dokumentach, nagłówkach itp.)
# HOTEL_NAME="Hotel Przykładowy"

# PIN managera do operacji wymagających autoryzacji (domyślnie: 1234)
# MANAGER_PIN="1234"

# =============================================================================
# Konfiguracja drukarek fiskalnych
# =============================================================================

# Typ sterownika drukarki fiskalnej: mock | novitus | elzab | posnet
# mock = tryb testowy (brak fizycznej drukarki)
# FISCAL_DRIVER="mock"

# --- POSNET ---
# Model drukarki POSNET (każdy model ma inne ograniczenia i możliwości):
#   thermal     - POSNET Thermal (podstawowa, 40 znaków, papier 57mm)
#   thermal_hs  - POSNET Thermal HS (szybsza, 40 znaków, obsługa grafik) [DOMYŚLNY]
#   ergo        - POSNET Ergo (ergonomiczna, 48 znaków, papier 80mm)
#   bingo       - POSNET Bingo (przenośna, 32 znaki, bateryjna)
#   bingo_hs    - POSNET Bingo HS (przenośna szybka, Bluetooth)
#   mobile_hs   - POSNET Mobile HS (mobilna, Wi-Fi/Bluetooth)
#   neo         - POSNET NEO (nowa generacja, 57 znaków, e-paragony)
#   neo_xl      - POSNET NEO XL (szeroka, 80 znaków, e-paragony)
#   revo        - POSNET Revo (pełna obsługa KSeF, e-paragony)
#   trio        - POSNET Trio (terminal+drukarka+kasa)
#   temo_hs     - POSNET Temo HS (ekonomiczna)
#   fv          - POSNET FV (dedykowana do faktur, format A4)
#   custom      - Niestandardowy (parametry z env poniżej)
# FISCAL_POSNET_MODEL="thermal_hs"

# Endpoint HTTP bridge POSNET (aplikacja pośrednicząca z drukarką)
# FISCAL_POSNET_ENDPOINT="http://127.0.0.1:9977/fiscal/print"

# Klucz API do autoryzacji (opcjonalnie)
# FISCAL_POSNET_API_KEY=""

# Timeout połączenia w ms (domyślnie: 8000)
# FISCAL_POSNET_TIMEOUT_MS="8000"

# --- POSNET Custom (tylko gdy FISCAL_POSNET_MODEL="custom") ---
# Maksymalna szerokość linii w znakach
# FISCAL_POSNET_MAX_LINE_WIDTH="40"

# Maksymalna liczba linii nagłówka
# FISCAL_POSNET_MAX_HEADER_LINES="6"

# Maksymalna liczba linii stopki
# FISCAL_POSNET_MAX_FOOTER_LINES="4"

# Maksymalna długość nazwy pozycji
# FISCAL_POSNET_MAX_ITEM_NAME_LENGTH="40"

# Czy obsługuje e-paragony (true/false)
# FISCAL_POSNET_SUPPORTS_E_RECEIPT="false"

# Czy obsługuje druk faktur na kasie (true/false)
# FISCAL_POSNET_SUPPORTS_INVOICE="false"

# Czy obsługuje NIP na paragonie (true/false, domyślnie true)
# FISCAL_POSNET_SUPPORTS_NIP="true"

# Czy obsługuje kody kreskowe/QR (true/false)
# FISCAL_POSNET_SUPPORTS_BARCODE="false"

# Czy obsługuje grafikę/logo (true/false)
# FISCAL_POSNET_SUPPORTS_GRAPHICS="false"

# Maksymalna liczba pozycji na paragonie (0 = brak limitu)
# FISCAL_POSNET_MAX_ITEMS="100"

# Wersja protokołu (1 = starszy, 2 = nowszy)
# FISCAL_POSNET_PROTOCOL_VERSION="1"

# Prędkość transmisji dla połączeń szeregowych
# FISCAL_POSNET_BAUD_RATE="9600"

# --- NOVITUS ---
# Host (adres IP) drukarki Novitus
# FISCAL_NOVITUS_HOST="192.168.1.100"

# Port TCP drukarki Novitus (domyślnie: 9100)
# FISCAL_NOVITUS_PORT="9100"

# Timeout połączenia w ms (domyślnie: 5000)
# FISCAL_NOVITUS_TIMEOUT_MS="5000"

# --- ELZAB ---
# Host (adres IP) drukarki Elzab
# FISCAL_ELZAB_HOST="192.168.1.101"

# Port TCP drukarki Elzab (domyślnie: 9100)
# FISCAL_ELZAB_PORT="9100"

# Timeout połączenia w ms (domyślnie: 5000)
# FISCAL_ELZAB_TIMEOUT_MS="5000"

# =============================================================================
# Konfiguracja SMS (Twilio)
# =============================================================================

# Account SID z Twilio Dashboard
# TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Auth Token z Twilio Dashboard
# TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Numer telefonu nadawcy (format E.164, np. +48123456789)
# TWILIO_FROM_NUMBER="+48123456789"

# =============================================================================
# Konfiguracja e-mail (SMTP)
# =============================================================================

# Host serwera SMTP
# SMTP_HOST="smtp.example.com"

# Port SMTP (587 dla TLS, 465 dla SSL)
# SMTP_PORT="587"

# Użytkownik SMTP
# SMTP_USER="noreply@example.com"

# Hasło SMTP
# SMTP_PASS="haslo"

# Adres nadawcy (From)
# SMTP_FROM="Hotel <noreply@example.com>"

# =============================================================================
# KSeF (Krajowy System e-Faktur)
# =============================================================================

# Środowisko: test | prod (wybiera KSEF_TEST_URL lub KSEF_PROD_URL gdy KSEF_BASE_URL nie jest ustawiony)
# KSEF_ENV="test"

# NIP podmiotu (10 znaków) – wymagany do inicjacji sesji
# KSEF_NIP="1234567890"

# Token autoryzacyjny (z portalu MF / KSeF) – do podpisywania wyzwania (Challenge-Response)
# KSEF_AUTH_TOKEN=""

# Nadpisanie URL API (gdy ustawione, KSEF_ENV i KSEF_TEST_URL/KSEF_PROD_URL są ignorowane)
# KSEF_BASE_URL="https://ksef.mf.gov.pl"

# URL środowiska testowego (domyślnie: https://ksef-test.mf.gov.pl)
# KSEF_TEST_URL="https://ksef-test.mf.gov.pl"

# URL środowiska produkcyjnego (domyślnie: https://ksef.mf.gov.pl)
# KSEF_PROD_URL="https://ksef.mf.gov.pl"

# =============================================================================
# Zewnętrzne API (POS, Bistro, Channel Manager)
# =============================================================================

# Klucz API do autoryzacji zewnętrznych systemów (Symplex Bistro, POS, itp.)
# Wymagany przez endpointy: /api/v1/external/posting, /api/v1/external/occupied-rooms
# EXTERNAL_API_KEY="twoj-bezpieczny-klucz-api"

# =============================================================================
# Webhook – powiadomienia o zdarzeniach
# =============================================================================

# URL webhooka przy tworzeniu rezerwacji (POST z payloadem JSON: event, id, guestName, roomNumber, checkIn, checkOut, ...)
# WEBHOOK_RESERVATION_URL="https://example.com/webhooks/reservation"
