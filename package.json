{
  "name": "hotel-system-pms",
  "version": "0.1.0",
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "private": true,
  "scripts": {
    "predev": "prisma generate && npx tsx scripts/sync-config-on-start.ts",
    "dev": "next dev -p 3011",
    "dev:3011": "npx next dev -p 3011",
    "dev:clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true})\" && prisma generate && npx tsx scripts/sync-config-on-start.ts && next dev -p 3011",
    "build": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true})\" && next build",
    "postbuild": "node scripts/copy-standalone-assets.cjs",
    "start": "next start",
    "start:local": "node app.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck && npm run build",
    "check:use-server": "npx tsx scripts/check-use-server-exports.ts",
    "posnet:bridge": "node posnet-bridge/server.mjs",
    "symplex:bridge": "node symplex-bridge/run.mjs",
    "symplex:sync": "node symplex-bridge/sync.mjs",
    "symplex:sync:to-kw": "node symplex-bridge/sync.mjs --to-kw",
    "symplex:sync:from-kw": "node symplex-bridge/sync.mjs --from-kw",
    "symplex:recon": "node symplex-bridge/sync.mjs --recon",
    "symplex:test": "node symplex-bridge/test-sync.mjs",
    "test:e2e": "npx tsx scripts/run-e2e.ts",
    "test:e2e:raw": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:build": "next build",
    "test:unit": "vitest run",
    "test:python": "py -3 -m pytest tests/ -v",
    "check:forms": "npx tsx scripts/check-form-controls.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:seed:kwhotel": "npx tsx prisma/seed-kwhotel.ts",
    "db:migrate:kwhotel": "npx tsx prisma/migrate-kwhotel.ts",
    "db:migrate:kwhotel:dry": "cross-env DRY_RUN=1 npx tsx prisma/migrate-kwhotel.ts",
    "db:config:export": "npx tsx prisma/config-export.ts",
    "db:config:import": "npx tsx prisma/config-import.ts",
    "db:push:staging": "dotenv -e .env.staging -- prisma db push",
    "db:migrate:staging": "dotenv -e .env.staging -- prisma migrate deploy"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/adapter-mariadb": "^6.16.0",
    "@prisma/client": "^6.16.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.20",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.4",
    "fast-xml-parser": "^5.3.5",
    "jose": "^6.1.3",
    "lucide-react": "^0.454.0",
    "mariadb": "^3.4.0",
    "next": "14.2.35",
    "otplib": "^13.3.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.7.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^5.1.1",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.9.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.35",
    "mysql2": "^3.17.1",
    "postcss": "^8.4.47",
    "prisma": "^6.16.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vitest": "^2.1.0"
  }
}
